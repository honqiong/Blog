
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <link href="~/css/login.css" rel="stylesheet" />
    <style type="text/css">
        #content {
            background-image:url("../../image/timg.jpg");
            width:100%;
            height:1080px;
        }
        #top {
            height:10%;
            border:1px solid white;
        }
        #center {
            height:80%;
            border:1px solid white;
        }
        #footer {
            height:10%;
            border-top:1px solid white;
            text-align:center;
            color:white;
            line-height:90px;
        }
        #center_left {
            
            height:100%;
        }
        #center_left_center {
            height:40%;
            margin-top:30%;
            border-left:5px solid white;
            color:white;
        }
        
        #center_left_top {
           
            font-size:60px;
            padding-left:2%;
        }
        #center_left_center_center {
            
            height:30%;
            line-height:100px;
            font-size:40px;
            padding-left:2%;
        }
        #center_left_bottom{
            height:40%;
            font-size:30px;
            padding-left:2%;
            margin-top:3%;
            line-height:100px;
        }
            #center_left_bottom a {
                text-decoration:none;
                color:white;
            }
            #center_left_bottom a {
                width:15%;
                height:30px;
                margin-top:50px;
            }
        #center_left_bottom a:hover{
            font-size:40px;
            color:aqua;
            transition-duration:0.5s;
        }
        #center_right {
            
            height: 75%;
            border-radius:25px;
            background-color:lightblue;
            opacity:0.8;
            margin-top:5%;
            transition:all 0.5s;
        }
            #center_right:hover {
                box-shadow:2px -1px 5px 4px white;
                margin-left:4%;
                margin-bottom:2%;
            }
        #logo {
            
            height:100%;
            margin-left:3%;
        }
        #logo_left {
            
            height: 100%;
            background-image:url("/image/lightTime.png");
            background-repeat:no-repeat;
            background-size:100% 100%;
        }
        #logo_right {
            
            height: 100%;
            line-height: 100px;
            font-size: 45px;
            color: white;
            font-weight: bold;
        }
        #loginform {
            width:80%;
            margin-left:10%;
        }
        #loginform #text{
            
            color:white;
            font-size:40px;
            font-weight:bold;
            text-align:center;
            margin-top:10%;
        }
        .white_cell {
           
           text-align:center;
           margin-top:50px;
        }
        #loginform .maxtext {
            font-size: 24px;
            color: white;
        }
        #Rpass{
            font-size:20px;
            color:white;
        }
        #submit {
            font-size:24px;
            margin-left:23%;
        }
        #email, #password {
            border: 1px solid #ccc;
            
        }
        #check {
            margin-left:34%;
            width:20px;
            height:20px;
            background-color:white;
            
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".div_hidden").hide();
            $(".hidden_div").show();
            $("a").click(function () {
                if ($("#logona").text() == "去注册   ")
                {
                    $("#logona").text("去登录   ");
                    $("#center_left_top").text("让你的阳光洒进轻时光")
                    $("#center_left_center_center").text("Let your sunshine into the light time")
                    $("#text").text("欢迎注册");
                    $(".div_hidden").show();
                    $(".hidden_div").hide();
                    $("#submit").val("注册");
                }
                else {
                    $("#logona").text("去注册   ")
                    $("#center_left_top").text("如品尝咖啡般，享受轻时光")
                    $("#center_left_center_center").text("Enjoy light time like coffee")
                    $("#text").text("欢迎登录");
                    $(".div_hidden").hide();
                    $(".hidden_div").show();
                    $("#submit").val("登录");
                }
                
            })
        });
    </script>
</head>

<body>
    <div id="content">
        <div class="row" id="top">
            <div class="row col-lg-5" id="logo">
                <div class="col-lg-5" id="logo_left"></div>
                <div class="col-lg-7" id="logo_right">轻时光博客</div>
            </div>
        </div>
        <div class="row" id="center">
            <div class="col-lg-5 col-lg-offset-1" id="center_left">
                <div id="center_left_center">
                    <div id="center_left_top">如品尝咖啡般，享受轻时光</div>
                    <div id="center_left_center_center">Enjoy light time like coffee</div>
                    <div id="center_left_bottom">
                        <div><a href="#"><span id="logona">去注册   </span><span class="glyphicon glyphicon-arrow-right"></span></a></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4" id="center_right">
                <form id="loginform" role="form" action="" method="post">
                    <div id="text">欢迎登录</div>
                    <div class="form-group white_cell">
                        <label for="name" class="maxtext">邮箱&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                        
                        <input type="text" class="input-lg" id="email" placeholder="请输入邮箱">
                    </div>
                    <div class="form-group white_cell">
                        <label for="password" class="maxtext">密码&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</label>
                        
                        <input type="password" class="input-lg" id="password" placeholder="请输入密码">
                    </div>
                    <div class="form-group white_cell div_hidden">
                        <label for="password" class="maxtext">确认密码</label>
                        
                        <input type="password" class="input-lg" id="password" placeholder="请输入再次密码">
                    </div>
                    <div class="form-group white_cell div_hidden">
                        <input type="text" class="input-lg" id="password" placeholder="验证码">
                        <input type="button" value="获取验证码" class="btn btn-danger"/>
                    </div>
                    <div class="form-group hidden_div">
                        <input type="checkbox" id="check">
                        <label id="Rpass">记住密码</label>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="submit" value="登录" class="form-control input-lg btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div id="footer">
            Copyright ©2020-20XX 轻时光博客
        </div>
    </div>
</body>
</html>
